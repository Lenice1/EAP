@model ProductVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Prodcut</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReOrderLevel" class="control-label"></label>
                <input asp-for="ReOrderLevel" class="form-control" />
                <span asp-validation-for="ReOrderLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <br/>
              <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-dark"  >Back to List</a> &nbsp;
            </div>
        </form>
    </div>
</div>


